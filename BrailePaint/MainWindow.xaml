<Window x:Class="BrailePaint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrailePaint"
        xmlns:c="clr-namespace:BrailePaint.Classes"
        mc:Ignorable="d"
        Title="BrailePaint" Height="450" Width="800" SizeChanged="Window_SizeChanged"
        MinHeight="200" MinWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <ListBox x:Name="log" Height="250">
                
            </ListBox>
        </StackPanel>

        <DockPanel Grid.Column="1">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Label>x:</Label>
                <Label Width="50" x:Name="x_coord_label" Content="{Binding coord_x}"></Label>
                <Label>y:</Label>
                <Label Width="50" x:Name="y_coord_label" Content="{Binding coord_y}"></Label>
            </StackPanel>
            <Border  Padding="0,0,20,20">
                <Canvas Background="LightGray" x:Name="main_canvas" MouseMove="main_canvas_MouseMove">
                    <c:ListBoxForCanvas x:Name="listbox_canvas" Background="Pink" Padding="0" Margin="0"
                             FontFamily="Cascadia Mono" 
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled"
                             MouseLeftButtonDown="listbox_canvas_MouseLeftButtonDown"
                             MouseLeftButtonUp="listbox_canvas_MouseLeftButtonUp"
                             IsEnabled="True"
                             >
                    </c:ListBoxForCanvas>
                </Canvas>
            </Border>
        </DockPanel>
    </Grid>
</Window>
